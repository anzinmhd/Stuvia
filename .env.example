# NextAuth - Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-secure-secret-here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth - Get from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Firebase (Client) - Get from Firebase Console
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id

# Firebase (Admin SDK) - Get from Firebase Console > Service Accounts
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
# Use quotes if the key contains special characters and make sure to replace escaped \n with actual newlines in CI if needed
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# SMTP Configuration - Configure your email provider
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@yourdomain.com

# Admin Emails - Comma-separated list of admin emails
ADMIN_EMAILS=admin1@rajagiri.edu.in,admin2@rajagiri.edu.in

# Optional: Enable email OTP verification (1 to enable, 0 to disable)
NEXT_PUBLIC_ENABLE_EMAIL_OTP=0
